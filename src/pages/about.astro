		</section>
	</main>
</Layout>

<style>
	.about-page {
		--primary-color: #ff6600;
		--text-dark: #1a1a2e;
		--text-light: #666;
		--bg-light: #fafafa;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(
			135deg,
			#ff6600 0%,
			#ff8533 50%,
			#ffad33 100%
		);
		padding: 100px 24px;
		text-align: center;
		color: #fff;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 800;
		margin: 0 0 16px;
	}

	.hero .highlight {
		display: block;
	}

	.tagline {
		font-size: 1.25rem;
		opacity: 0.9;
		margin: 0;
	}

	/* Mission Section */
	.mission {
		padding: 80px 0;
		background: #fff;
	}

	.mission-content {
		max-width: 700px;
		margin: 0 auto;
		text-align: center;
	}

	.mission-icon {
		font-size: 4rem;
		margin-bottom: 24px;
	}

	.mission h2 {
		font-size: 2rem;
		color: var(--text-dark);
		margin: 0 0 20px;
	}

	.mission p {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--text-light);
		margin: 0;
	}

	/* Story Section */
	.story {
		padding: 80px 0;
		background: var(--bg-light);
	}

	.story-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
	}

	.story-image {
		aspect-ratio: 1;
		border-radius: 20px;
		overflow: hidden;
	}

	.image-placeholder {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #ffe4cc, #ffcc99);
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 8rem;
	}

	.story-text h2 {
		font-size: 2rem;
		color: var(--text-dark);
		margin: 0 0 24px;
	}

	.story-text p {
		font-size: 1.0625rem;
		line-height: 1.8;
		color: var(--text-light);
		margin: 0 0 16px;
	}

	.story-text p:last-child {
		margin-bottom: 0;
	}

	/* Values Section */
	.values {
		padding: 80px 0;
		background: #fff;
		text-align: center;
	}

	.values h2 {
		font-size: 2rem;
		color: var(--text-dark);
		margin: 0 0 48px;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 32px;
	}

	.value-card {
		padding: 32px 24px;
		background: var(--bg-light);
		border-radius: 16px;
		transition:
			transform 0.3s,
			box-shadow 0.3s;
	}

	.value-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	.value-icon {
		font-size: 3rem;
		margin-bottom: 16px;
	}

	.value-card h3 {
		font-size: 1.25rem;
		color: var(--text-dark);
		margin: 0 0 12px;
	}

	.value-card p {
		font-size: 0.9375rem;
		line-height: 1.6;
		color: var(--text-light);
		margin: 0;
	}

	/* Stats Section */
	.stats {
		padding: 60px 0;
		background: linear-gradient(135deg, #1a1a2e, #2d2d44);
		color: #fff;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 32px;
		text-align: center;
	}

	.stat-item {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--primary-color);
	}

	.stat-label {
		font-size: 1rem;
		opacity: 0.8;
	}

	/* CTA Section */
	.cta {
		padding: 80px 0;
		background: var(--bg-light);
		text-align: center;
	}

	.cta h2 {
		font-size: 2rem;
		color: var(--text-dark);
		margin: 0 0 16px;
	}

	.cta p {
		font-size: 1.125rem;
		color: var(--text-light);
		margin: 0 0 32px;
	}

	.cta-button {
		display: inline-block;
		padding: 16px 40px;
		background: linear-gradient(135deg, #ff6600, #ff8533);
		color: #fff;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.0625rem;
		border-radius: 50px;
		transition:
			transform 0.2s,
			box-shadow 0.2s;
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 30px rgba(255, 102, 0, 0.4);
	}

	/* Responsive */
	@media (max-width: 900px) {
		.story-grid {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.story-image {
			max-width: 400px;
			margin: 0 auto;
		}

		.values-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.stats-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.hero {
			padding: 60px 24px;
		}

		.mission,
		.story,
		.values,
		.cta {
			padding: 60px 0;
		}

		.values-grid {
			grid-template-columns: 1fr;
		}

		.stats-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 24px;
		}

		.stat-number {
			font-size: 2rem;
		}
	}
</style>

