---
import Layout from "../layouts/Layout.astro";
import { getArticles } from "@modules/articles";
import { getCategories } from "@modules/categories";
import type { HydratedArticle } from "@modules/articles"; // Use Hydrated types
import type { HydratedCategory } from "@modules/categories"; 
import type { Author } from "@modules/authors";
import { hydrateArticle, hydrateCategory, extractImage, getImageSrcSet } from "@shared/utils";
import StoriesBar from "../components/StoriesBar.astro";
import WebStoryViewer from "../components/WebStoryViewer.astro";

const { env } = Astro.locals.runtime;

const siteTitle = "Easy and Quick Recipes for Everyone - Freecipies";
const siteDescription =
  "Discover delicious, easy-to-follow recipes with everyday ingredients. From quick weeknight dinners to impressive desserts, Freecipies makes cooking fun and accessible!";

// Fetch data from database
let allRecipes: HydratedArticle[] = [];
let categories: HydratedCategory[] = [];

try {
  // Get all recipes for various sections
  const { items: recipes } = await getArticles(env.DB, { limit: 12 });
  allRecipes = recipes.map(hydrateArticle);

  // Get categories
  const rawCategories = await getCategories(env.DB, { isOnline: true });
  categories = rawCategories.map(hydrateCategory);
} catch (error) {
  console.error("Error fetching data for homepage:", error);
}

// Split recipes for different sections
const featuredRecipes = allRecipes.slice(0, 4);  // Hero grid
const popularRecipes = allRecipes.slice(0, 4);   // Popular section (can overlap with hero)
const moreRecipes = allRecipes.slice(4, 8);      // More recipes

// Create a map for category colors by slug
const categoryColorMap = new Map(categories.map(c => [c.slug, c.color || '#ff6600']));

// Helper function for recipe URL
const getRecipeUrl = (recipe: HydratedArticle) =>
  recipe.route || `/recipes/${recipe.slug}`;

// Helper function for category color
const getCategoryColor = (categorySlug: string) =>
  categoryColorMap.get(categorySlug) || '#ff6600';

const getRecipeImage = (recipe: HydratedArticle, targetWidth: number, prefer: 'cover' | 'thumbnail' = 'cover') => {
  const cover = extractImage(recipe.imagesJson, 'cover', targetWidth);
  const thumbnail = extractImage(recipe.imagesJson, 'thumbnail', targetWidth);
  const slotName = prefer === 'cover'
    ? (cover.imageUrl ? 'cover' : 'thumbnail')
    : (thumbnail.imageUrl ? 'thumbnail' : 'cover');
  const selected = slotName === 'cover' ? cover : thumbnail;
  const srcSet = getImageSrcSet(recipe.imagesJson, slotName);
  return { selected, srcSet };
};

const getCategoryImage = (category: HydratedCategory, targetWidth: number, prefer: 'cover' | 'thumbnail' = 'thumbnail') => {
  const cover = extractImage(category.imagesJson, 'cover', targetWidth);
  const thumbnail = extractImage(category.imagesJson, 'thumbnail', targetWidth);
  const slotName = prefer === 'cover'
    ? (cover.imageUrl ? 'cover' : 'thumbnail')
    : (thumbnail.imageUrl ? 'thumbnail' : 'cover');
  const selected = slotName === 'cover' ? cover : thumbnail;
  const srcSet = getImageSrcSet(category.imagesJson, slotName);
  return { selected, srcSet };
};
---

<Layout title={siteTitle} description={siteDescription}>
  <main class="homepage">
    <StoriesBar />
    {
      featuredRecipes.length > 0 && (
        <section class="hero-grid-section">
          <div class="hero-grid">
            {/* Main Slider */}
            <div class="hero-slider" id="heroSlider">
              <div class="slider-track">
                {featuredRecipes.slice(0, 4).map((recipe: HydratedArticle, index: number) => {
                  const { selected, srcSet } = getRecipeImage(recipe, 1200, "cover");
                  const sizes = "(max-width: 900px) 100vw, 60vw";
                  return (
                  <a
                    href={getRecipeUrl(recipe)}
                    class:list={["slide", { active: index === 0 }]}
                    data-index={index}
                  >
                    <div class="card-image">
                      {(selected.imageUrl || recipe.imageUrl) && (
                        <img
                          src={selected.imageUrl || recipe.imageUrl}
                          alt={selected.imageAlt || recipe.imageAlt || recipe.headline}
                          width={selected.imageWidth || recipe.imageWidth || 1200}
                          height={selected.imageHeight || recipe.imageHeight || 675}
                          srcset={srcSet || undefined}
                          sizes={srcSet ? sizes : undefined}
                          loading={index === 0 ? "eager" : "lazy"}
                          fetchpriority={index === 0 ? "high" : "auto"}
                          style={selected.imageStyle || undefined}
                        />
                      )}
                      <div class="card-overlay" />
                    </div>
                    <div class="card-content">
                      <span 
                        class="card-category"
                        style={`--badge-color: ${getCategoryColor(recipe.categorySlug)};`}
                      >
                        {recipe.categoryLabel}
                      </span>
                      <h2 class="card-title">{recipe.headline}</h2>
                    </div>
                  </a>
                )})}
              </div>
              {/* Navigation Dots */}
              <div class="slider-dots">
                {featuredRecipes.slice(0, 4).map((_: HydratedArticle, index: number) => (
                  <button
                    class:list={["dot", { active: index === 0 }]}
                    data-index={index}
                    aria-label={`Slide ${index + 1}`}
                  />
                ))}
              </div>
            </div>

            {/* Side cards */}
            <div class="hero-side-cards">
              {featuredRecipes.slice(1, 3).map((recipe: HydratedArticle) => {
                const { selected, srcSet } = getRecipeImage(recipe, 600, "cover");
                const sizes = "(max-width: 900px) 100vw, 40vw";
                return (
                <a
                  href={getRecipeUrl(recipe)}
                  class="recipe-card recipe-card-small"
                >
                  <div class="card-image">
                    {(selected.imageUrl || recipe.imageUrl) && (
                      <img
                        src={selected.imageUrl || recipe.imageUrl}
                        alt={selected.imageAlt || recipe.imageAlt || recipe.headline}
                        width={selected.imageWidth || recipe.imageWidth || 600}
                        height={selected.imageHeight || recipe.imageHeight || 400}
                        srcset={srcSet || undefined}
                        sizes={srcSet ? sizes : undefined}
                        loading="lazy"
                        style={selected.imageStyle || undefined}
                      />
                    )}
                    <div class="card-overlay" />
                  </div>
                  <div class="card-content">
                    <span 
                      class="card-category"
                      style={`--badge-color: ${getCategoryColor(recipe.categorySlug)};`}
                    >{recipe.categoryLabel}</span>
                    <h3 class="card-title">{recipe.headline}</h3>
                  </div>
                </a>
              )})}
            </div>
          </div>
        </section>
      )
    }

    <!-- Popular Recipes Section -->
    {
      popularRecipes.length > 0 && (
        <section class="section popular-recipes-section">
          <div class="container">
            <div class="section-header">
              <h2 class="section-title">
                <span class="title-dot"></span>
                Popular Recipes
              </h2>
            </div>
            <div class="popular-grid">
              {popularRecipes.map((recipe: HydratedArticle) => {
                const { selected, srcSet } = getRecipeImage(recipe, 400, "cover");
                const sizes = "(max-width: 600px) 100vw, (max-width: 1024px) 50vw, 25vw";
                return (
                <article class="foxiz-card">
                  <a href={getRecipeUrl(recipe)} class="foxiz-card-image">
                    {(selected.imageUrl || recipe.imageUrl) && (
                      <img
                        src={selected.imageUrl || recipe.imageUrl}
                        alt={selected.imageAlt || recipe.imageAlt || recipe.headline}
                        width={selected.imageWidth || recipe.imageWidth || 400}
                        height={selected.imageHeight || recipe.imageHeight || 300}
                        srcset={srcSet || undefined}
                        sizes={srcSet ? sizes : undefined}
                        loading="lazy"
                        style={selected.imageStyle || undefined}
                      />
                    )}
                    <span 
                      class="foxiz-badge"
                      style={`--badge-color: ${getCategoryColor(recipe.categorySlug)};`}
                    >
                      {recipe.categoryLabel}
                    </span>
                  </a>
                  <div class="foxiz-card-body">
                    <h3 class="foxiz-card-title">
                      <a href={getRecipeUrl(recipe)}>{recipe.headline}</a>
                    </h3>
                    <div class="foxiz-tags">
                      {recipe.categoryLabel && (
                        <a href={`/categories/${recipe.categorySlug}`} class="foxiz-tag">
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h6l2 3h8v10H4z"/>
                          </svg>
                          {recipe.categoryLabel}
                        </a>
                      )}
                      {recipe.recipeJson?.cookTime && (
                        <span class="foxiz-tag">
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                          </svg>
                          {recipe.recipeJson.cookTime}
                        </span>
                      )}
                    </div>
                  </div>
                </article>
                );
              })}
            </div>
          </div>
        </section>
      )
    }

    <!-- Want to Learn How to Make Section -->
    {
      categories.length > 0 && (
        <section class="section categories-section">
          <div class="container">
            <h2 class="section-title centered">Want to Learn How to Make?</h2>
            
            <!-- Category Filter Buttons -->
            <div class="category-filter-row">
              {categories.slice(0, 4).map((category) => (
                <a href={`/categories/${category.slug}`} class="category-filter-btn">
                  {category.label}
                </a>
              ))}
            </div>

            <!-- Category Chips with Images -->
            <div class="category-chips-row">
              {categories.map((category: HydratedCategory) => {
                const { selected, srcSet } = getCategoryImage(category, 80, "thumbnail");
                const sizes = "80px";
                return (
                <a href={`/categories/${category.slug}`} class="category-chip">
                  <div class="chip-image-wrapper">
                    {(selected.imageUrl || category.imageUrl) ? (
                      <img 
                        src={selected.imageUrl || category.imageUrl} 
                        alt={selected.imageAlt || category.imageAlt || category.label}
                        width={selected.imageWidth || category.imageWidth || 80}
                        height={selected.imageHeight || category.imageHeight || 80}
                        srcset={srcSet || undefined}
                        sizes={srcSet ? sizes : undefined}
                        loading="lazy"
                        style={selected.imageStyle || undefined}
                      />
                    ) : (
                      <div class="chip-placeholder">
                        {category.label.charAt(0)}
                      </div>
                    )}
                  </div>
                  <span class="chip-label">{category.label}</span>
                  <span class="chip-type">Category</span>
                </a>
                );
              })}
            </div>
          </div>
        </section>
      )
    }

    <!-- More Recipes Section -->
    {
      moreRecipes.length > 0 && (
        <section class="section more-recipes-section">
          <div class="container">
            <div class="section-header">
              <h2 class="section-title">
                <span class="title-dot"></span>
                More Recipes
              </h2>
              <a href="/recipes" class="view-all">
                View All â†’
              </a>
            </div>
            <div class="recipes-grid">
              {moreRecipes.map((recipe: HydratedArticle) => {
                const { selected, srcSet } = getRecipeImage(recipe, 400, "cover");
                const sizes = "(max-width: 768px) 50vw, 25vw";
                return (
                <a href={getRecipeUrl(recipe)} class="recipe-card-vertical">
                  <div class="card-image-wrapper">
                    {(selected.imageUrl || recipe.imageUrl) && (
                      <img
                        src={selected.imageUrl || recipe.imageUrl}
                        alt={selected.imageAlt || recipe.imageAlt || recipe.headline}
                        width={selected.imageWidth || recipe.imageWidth || 400}
                        height={selected.imageHeight || recipe.imageHeight || 300}
                        srcset={srcSet || undefined}
                        sizes={srcSet ? sizes : undefined}
                        loading="lazy"
                        style={selected.imageStyle || undefined}
                      />
                    )}
                    <span 
                      class="card-category-badge"
                      style={`--badge-color: ${getCategoryColor(recipe.categorySlug)};`}
                    >
                      {recipe.categoryLabel}
                    </span>
                  </div>
                  <div class="card-body">
                    <h3 class="card-title">{recipe.headline}</h3>
                    <div class="card-meta">
                      {recipe.recipeJson?.prepTime && (
                        <span class="meta-item">
                          <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <circle cx="12" cy="12" r="10" />
                            <path d="M12 6v6l4 2" />
                          </svg>
                          {recipe.recipeJson.prepTime}
                        </span>
                      )}
                    </div>
                  </div>
                </a>
                );
              })}
            </div>
          </div>
        </section>
      )
    }

    <!-- Newsletter Banner -->
    <section class="newsletter-banner">
      <div class="container">
        <div class="newsletter-content">
          <h2>Get New Recipes Weekly</h2>
          <p>Subscribe to receive delicious recipes straight to your inbox.</p>
          <form class="newsletter-form">
            <input type="email" placeholder="Your email address" required />
            <button type="submit">Subscribe</button>
          </form>
        </div>
      </div>
    </section>
  </main>
  <WebStoryViewer />
</Layout>

