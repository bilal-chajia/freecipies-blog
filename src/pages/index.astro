---
import Layout from '../layouts/Layout.astro';
import RecipeCard from '../components/RecipeCard.astro';
import CategoryCard from '../components/CategoryCard.astro';
import { fetchArticles, fetchCategories } from '../lib/api';
import type { Article, Category } from '../types';

const siteTitle = "Easy and Quick Recipes for Everyone - Freecipies";
const siteDescription = "Discover delicious, easy-to-follow recipes with everyday ingredients. From quick weeknight dinners to impressive desserts, Freecipies makes cooking fun and accessible!";

// Fetch featured recipes and categories
let featuredRecipes: Article[] = [];
let categories: Category[] = [];

try {
  const recipesResponse = await fetchArticles({ limit: 6, page: 1 }, Astro.site);
  if (recipesResponse.success && recipesResponse.data) {
    featuredRecipes = recipesResponse.data;
  }
  
  const categoriesResponse = await fetchCategories(undefined, Astro.site);
  if (categoriesResponse.success && categoriesResponse.data) {
    categories = Array.isArray(categoriesResponse.data) ? categoriesResponse.data : [];
  }
} catch (error) {
  console.error('Error fetching data for homepage:', error);
}
---

<Layout title={siteTitle} description={siteDescription}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-container">
        <h1 class="hero-title">SIMPLE RECIPES PERFECT FOR FAMILIES</h1>
        <p class="hero-subtitle">
          Welcome to Freecipies üë©‚Äçüç≥! <strong>Quick, easy, and tasty meals for everyone</strong>. 
          Don't worry about the hassle: find simple recipes, everyday ingredients, and the joy of 
          affordable homemade food. From milkshakes to fries, tagines, omelets, macarons, and couscous... 
          Whether you're a fan of a Thermomix or prefer the hands-on approach, Freecipies makes cooking 
          fun and accessible!
        </p>
        <div class="hero-cta">
          <a href="/recipes" class="btn btn-primary">Explore Recipes</a>
          <a href="/categories" class="btn btn-secondary">Browse Categories</a>
        </div>
      </div>
    </section>

    <!-- Popular Categories Section -->
    {categories.length > 0 && (
      <section class="categories-section">
        <div class="section-container">
          <div class="section-header">
            <h2>POPULAR CATEGORIES</h2>
            <a href="/categories" class="view-all-link" title="View all categories">
              View All ‚Üí
            </a>
          </div>
          
          <div class="categories-grid">
            {categories.slice(0, 6).map((category) => (
              <CategoryCard category={category} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Featured Recipes Section -->
    {featuredRecipes.length > 0 && (
      <section class="recipes-section">
        <div class="section-container">
          <div class="section-header">
            <h2>FEATURED RECIPES</h2>
            <a href="/recipes" class="view-all-link" title="View all recipes">
              View All ‚Üí
            </a>
          </div>
          
          <div class="recipes-grid">
            {featuredRecipes.map((recipe) => (
              <RecipeCard recipe={recipe} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-container">
        <h2>Ready to Cook Something Delicious?</h2>
        <p>Join thousands of home cooks discovering easy, affordable recipes that bring families together.</p>
        <a href="/recipes" class="btn btn-primary btn-large">Start Cooking Now</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-section {
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
    padding: clamp(3rem, 8vw, 6rem) 0;
    text-align: center;
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 1.5rem);
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin: 0 0 1.5rem 0;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: #333;
    margin: 0 0 2rem 0;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 1.5rem);
  }

  .categories-section,
  .recipes-section {
    padding: clamp(3rem, 8vw, 5rem) 0;
  }

  .categories-section {
    background: #f9f9f9;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    margin: 0;
    color: #1a1a1a;
  }

  .view-all-link {
    color: #ff6b35;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .view-all-link:hover {
    color: #e55a2b;
  }

  .categories-grid,
  .recipes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .categories-grid,
    .recipes-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }
  }

  .cta-section {
    background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
    padding: clamp(3rem, 8vw, 5rem) 0;
    text-align: center;
    color: white;
  }

  .cta-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 1.5rem);
  }

  .cta-section h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    margin: 0 0 1rem 0;
  }

  .cta-section p {
    font-size: 1.1rem;
    margin: 0 0 2rem 0;
    opacity: 0.95;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: #ff6b35;
    color: white;
  }

  .btn-primary:hover {
    background: #e55a2b;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: white;
    color: #ff6b35;
    border: 2px solid #ff6b35;
  }

  .btn-secondary:hover {
    background: #f9f9f9;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
</style>
