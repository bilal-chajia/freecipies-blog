---
import { getArticles } from "../lib/db";

interface Props {
    currentSlug?: string;
    limit?: number;
}

const { currentSlug = "", limit = 5 } = Astro.props;

// Fetch popular recipes (using isFavorite or just recent ones for now)
let recipes: any[] = [];
try {
    const { runtime } = Astro.locals;
    if (runtime?.env?.DB) {
        const result = await getArticles(runtime.env.DB, {
            type: "recipe",
            limit: limit + 1, // Get one extra in case we need to filter out current
        });
        // Filter out current recipe - result returns { items, total }
        recipes = (result.items || [])
            .filter((r: any) => r.slug !== currentSlug)
            .slice(0, limit);
    }
} catch (e) {
    console.error("Error loading popular recipes:", e);
}
---

<div class="popular-recipes-widget">
    <div class="widget-header">
        <span class="header-dot"></span>
        <h3>Popular Recipes</h3>
    </div>

    {
        recipes.length > 0 ? (
            <div class="recipe-list">
                {recipes.map((recipe: any) => (
                    <a href={`/recipes/${recipe.slug}`} class="recipe-item">
                        <div class="recipe-content">
                            <h4 class="recipe-title">{recipe.label}</h4>
                            <div class="recipe-meta">
                                {recipe.categoryLabel && (
                                    <span class="category">
                                        {recipe.categoryLabel}
                                    </span>
                                )}
                                {recipe.recipeJson?.cookTime && (
                                    <>
                                        <span class="separator">â€¢</span>
                                        <span class="cook-time">
                                            {recipe.recipeJson.cookTime}
                                        </span>
                                    </>
                                )}
                            </div>
                        </div>
                        {recipe.image?.url && (
                            <img
                                src={recipe.image.url}
                                alt={recipe.image.alt || recipe.label}
                                class="recipe-thumb"
                                width="80"
                                height="80"
                                loading="lazy"
                            />
                        )}
                    </a>
                ))}
            </div>
        ) : (
            <p class="no-recipes">More recipes coming soon!</p>
        )
    }
</div>

