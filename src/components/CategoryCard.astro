---
import type { HydratedCategory } from "@modules/categories";
import { extractImage, getImageSrcSet } from "@shared/utils";

interface Props {
  category: HydratedCategory;
}

const { category } = Astro.props;

const cover = extractImage(category.imagesJson, "cover", 1200);
const thumbnail = extractImage(category.imagesJson, "thumbnail", 720);
const slotName = cover.imageUrl ? "cover" : "thumbnail";
const selected = cover.imageUrl ? cover : thumbnail;
const srcSet = getImageSrcSet(category.imagesJson, slotName);
const image = {
  url:
    selected.imageUrl ||
    category.imageUrl ||
    "https://images.unsplash.com/photo-1556910103-1c02745a30bf?w=800&q=80",
  alt: selected.imageAlt || category.imageAlt || category.label,
  width: selected.imageWidth || category.imageWidth || 800,
  height: selected.imageHeight || category.imageHeight || 600,
};
---

<article
  class="category-card"
  style={`--category-color: ${category.color || "#ff6b35"};`}
>
  <a href={`/categories/${category.slug}`} class="card-link">
    <div class="card-image">
      <img
        src={image.url}
        alt={image.alt}
        width={image.width}
        height={image.height}
        srcset={srcSet || undefined}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 400px"
        loading="lazy"
      />
      <div class="card-overlay"></div>
    </div>

    {/* Badge - Top Right */}
    {
      category.isFeatured && (
        <span class="card-badge">
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Popular
        </span>
      )
    }

    {/* Content - Bottom Left */}
    <div class="card-content">
      <h3 class="card-title" style={`color: ${category.color || "#ffffff"};`}>
        {category.label}
      </h3>
      <p class="card-description">
        {category.shortDescription}
      </p>
    </div>

    {/* CTA Button - Bottom Right */}
    <span class="card-cta">
      <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
      >
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </span>
  </a>
</article>

<style>
  .category-card {
    border-radius: 1rem;
    overflow: hidden;
    background: #1a1a1a;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.25),
      0 0 30px color-mix(in srgb, var(--category-color) 40%, transparent);
  }

  .card-link {
    display: block;
    position: relative;
    aspect-ratio: 4 / 3;
    text-decoration: none;
  }

  .card-image {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .category-card:hover .card-image img {
    transform: scale(1.1);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.5) 40%,
      rgba(0, 0, 0, 0.2) 100%
    );
    transition: opacity 0.4s ease;
  }

  .category-card:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem 4rem 1rem 1.25rem;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 5rem;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.6) 60%,
      transparent 100%
    );
    border-radius: 0 0 1rem 1rem;
  }

  .card-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    padding: 0.25rem 0.6rem;
    border-radius: 2rem;
    font-size: 0.6rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.3);
    z-index: 10;
  }

  .card-badge svg {
    width: 10px;
    height: 10px;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    text-shadow:
      0 2px 4px rgba(0, 0, 0, 0.8),
      0 4px 12px rgba(0, 0, 0, 0.6),
      0 0 20px rgba(0, 0, 0, 0.4);
    -webkit-text-stroke: 0.5px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .category-card:hover .card-title {
    transform: translateY(-4px);
    text-shadow:
      0 4px 16px rgba(0, 0, 0, 0.6),
      0 0 30px currentColor;
  }

  .card-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 2.625rem; /* 2 lines * 1.5 line-height * 0.875rem */
  }

  .card-cta {
    position: absolute;
    bottom: 0.75rem;
    right: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: white;
    background: #ff6b35;
    border-radius: 50%;
    box-shadow: 0 2px 10px rgba(255, 107, 53, 0.35);
    transition: all 0.3s ease;
    z-index: 10;
  }

  .card-cta svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .category-card:hover .card-cta {
    background: #ff5722;
    transform: scale(1.1);
  }

  .category-card:hover .card-cta svg {
    transform: translateX(3px);
  }

  @media (max-width: 640px) {
    .card-content {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-description {
      -webkit-line-clamp: 1;
    }
  }
</style>
