---
/**
 * MegaMenu Component
 *
 * Food Network-style mega menu dropdown with columns and featured content.
 * Used in Header.astro for dynamic navigation.
 */

interface MenuItem {
    id: string;
    label: string;
    type: "mega" | "link";
    url?: string;
    highlight?: boolean;
    openInNewTab?: boolean;
    columns?: {
        id: string;
        title: string;
        links: { id: string; label: string; url: string }[];
    }[];
    featured?: {
        enabled: boolean;
        title?: string;
        image?: string;
        url?: string;
        description?: string;
    };
}

interface Props {
    items: MenuItem[];
    currentPath: string;
}

const { items, currentPath } = Astro.props;
---

<nav class="mega-nav" id="mega-nav">
    {
        items.map((item) => (
            <div class="nav-item" data-type={item.type}>
                {item.type === "link" ? (
                    <a
                        href={item.url}
                        class:list={[
                            "nav-link",
                            { active: currentPath.startsWith(item.url || "") },
                            { highlight: item.highlight },
                        ]}
                        target={item.openInNewTab ? "_blank" : undefined}
                        rel={
                            item.openInNewTab
                                ? "noopener noreferrer"
                                : undefined
                        }
                    >
                        {item.label}
                        {item.openInNewTab && (
                            <svg
                                class="external-icon"
                                width="12"
                                height="12"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                <polyline points="15 3 21 3 21 9" />
                                <line x1="10" y1="14" x2="21" y2="3" />
                            </svg>
                        )}
                    </a>
                ) : (
                    <>
                        <button
                            class:list={[
                                "nav-trigger",
                                { highlight: item.highlight },
                            ]}
                            aria-expanded="false"
                            aria-haspopup="true"
                        >
                            {item.label}
                            <svg
                                class="chevron"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <polyline points="6 9 12 15 18 9" />
                            </svg>
                        </button>

                        <div class="mega-dropdown">
                            <div class="mega-content">
                                {/* Columns */}
                                <div class="mega-columns">
                                    {item.columns?.map((col) => (
                                        <div class="mega-column">
                                            <h4 class="column-title">
                                                {col.title}
                                            </h4>
                                            <ul class="column-links">
                                                {col.links?.map((link) => (
                                                    <li>
                                                        <a
                                                            href={link.url}
                                                            class="column-link"
                                                        >
                                                            {link.label}
                                                        </a>
                                                    </li>
                                                ))}
                                            </ul>
                                        </div>
                                    ))}
                                </div>

                                {/* Featured Content */}
                                {item.featured?.enabled && (
                                    <div class="mega-featured">
                                        <a
                                            href={item.featured.url || "#"}
                                            class="featured-card"
                                        >
                                            {item.featured.image ? (
                                                <img
                                                    src={item.featured.image}
                                                    alt={
                                                        item.featured.title ||
                                                        "Featured"
                                                    }
                                                    class="featured-image"
                                                />
                                            ) : (
                                                <div class="featured-placeholder">
                                                    <svg
                                                        width="40"
                                                        height="40"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="1.5"
                                                    >
                                                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                                                    </svg>
                                                </div>
                                            )}
                                            <div class="featured-content">
                                                <span class="featured-label">
                                                    Featured
                                                </span>
                                                <h5 class="featured-title">
                                                    {item.featured.title ||
                                                        "Featured Recipe"}
                                                </h5>
                                                {item.featured.description && (
                                                    <p class="featured-desc">
                                                        {
                                                            item.featured
                                                                .description
                                                        }
                                                    </p>
                                                )}
                                            </div>
                                        </a>
                                    </div>
                                )}
                            </div>
                        </div>
                    </>
                )}
            </div>
        ))
    }
</nav>

<style>
    .mega-nav {
        display: none;
        align-items: center;
        gap: 0.25rem;
    }

    .nav-item {
        position: relative;
    }

    .nav-link,
    .nav-trigger {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.5rem 1rem;
        font-size: 0.95rem;
        font-weight: 500;
        color: #333;
        text-decoration: none;
        border: none;
        background: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .nav-link:hover,
    .nav-trigger:hover,
    .nav-link.active,
    .nav-trigger[aria-expanded="true"] {
        background: #fff3e0;
        color: #ff6b35;
    }

    .nav-link.highlight,
    .nav-trigger.highlight {
        color: #ff6b35;
        font-weight: 600;
    }

    .external-icon {
        opacity: 0.5;
        margin-left: 0.25rem;
    }

    .chevron {
        transition: transform 0.2s ease;
    }

    .nav-trigger[aria-expanded="true"] .chevron {
        transform: rotate(180deg);
    }

    /* Mega Dropdown */
    .mega-dropdown {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%) translateY(10px);
        min-width: 600px;
        background: white;
        border-radius: 16px;
        box-shadow:
            0 20px 60px rgba(0, 0, 0, 0.15),
            0 0 0 1px rgba(0, 0, 0, 0.05);
        opacity: 0;
        visibility: hidden;
        transition: all 0.25s ease;
        z-index: 100;
        padding: 1.5rem;
    }

    .nav-item:hover .mega-dropdown,
    .nav-trigger[aria-expanded="true"] + .mega-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateY(0);
    }

    .mega-content {
        display: flex;
        gap: 2rem;
    }

    .mega-columns {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 2rem;
    }

    .mega-column {
        min-width: 140px;
    }

    .column-title {
        font-size: 0.75rem;
        font-weight: 700;
        color: #ff6b35;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin: 0 0 0.75rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #fff3e0;
    }

    .column-links {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .column-link {
        display: block;
        padding: 0.4rem 0;
        font-size: 0.9rem;
        color: #555;
        text-decoration: none;
        transition: all 0.15s ease;
    }

    .column-link:hover {
        color: #ff6b35;
        transform: translateX(4px);
    }

    /* Featured Section */
    .mega-featured {
        width: 220px;
        flex-shrink: 0;
    }

    .featured-card {
        display: block;
        text-decoration: none;
        border-radius: 12px;
        overflow: hidden;
        background: linear-gradient(135deg, #fff8f5 0%, #fff3e0 100%);
        border: 1px solid #ffe0cc;
        transition: all 0.2s ease;
    }

    .featured-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(255, 107, 53, 0.15);
    }

    .featured-image {
        width: 100%;
        height: 120px;
        object-fit: cover;
    }

    .featured-placeholder {
        width: 100%;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #ffe0cc 0%, #ffd4b8 100%);
        color: #ff6b35;
    }

    .featured-content {
        padding: 1rem;
    }

    .featured-label {
        font-size: 0.65rem;
        font-weight: 700;
        color: #ff6b35;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .featured-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0.25rem 0;
        line-height: 1.3;
    }

    .featured-desc {
        font-size: 0.75rem;
        color: #666;
        margin: 0.5rem 0 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media (min-width: 768px) {
        .mega-nav {
            display: flex;
        }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
        .mega-nav {
            gap: 0;
        }

        .nav-link,
        .nav-trigger {
            padding: 0.4rem 0.6rem;
            font-size: 0.85rem;
        }

        .mega-dropdown {
            min-width: 500px;
            padding: 1rem;
        }

        .mega-featured {
            width: 180px;
        }
    }
</style>

<script>
    // Handle mega menu interactions
    const megaNav = document.getElementById("mega-nav");
    const triggers = megaNav?.querySelectorAll(".nav-trigger");

    triggers?.forEach((trigger) => {
        const parent = trigger.parentElement;

        // Hover interaction
        parent?.addEventListener("mouseenter", () => {
            trigger.setAttribute("aria-expanded", "true");
        });

        parent?.addEventListener("mouseleave", () => {
            trigger.setAttribute("aria-expanded", "false");
        });

        // Click fallback for touch devices
        trigger.addEventListener("click", (e) => {
            e.preventDefault();
            const isExpanded = trigger.getAttribute("aria-expanded") === "true";

            // Close all other menus
            triggers.forEach((t) => {
                if (t !== trigger) t.setAttribute("aria-expanded", "false");
            });

            trigger.setAttribute("aria-expanded", String(!isExpanded));
        });
    });

    // Close on outside click
    document.addEventListener("click", (e) => {
        if (!megaNav?.contains(e.target as Node)) {
            triggers?.forEach((t) => t.setAttribute("aria-expanded", "false"));
        }
    });

    // Close on escape
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
            triggers?.forEach((t) => t.setAttribute("aria-expanded", "false"));
        }
    });
</script>
