---
import type { HydratedArticle } from "@modules/articles";
import { extractImage, getImageSrcSet } from "@shared/utils";
import { formatTime } from "../lib/utils";
interface Props {
  recipe: HydratedArticle;
}
const { recipe } = Astro.props;
const recipeDetails = recipe.recipeJson;
const thumbnail = extractImage(recipe.imagesJson, "thumbnail", 720);
const cover = extractImage(recipe.imagesJson, "cover", 720);
const slotName = thumbnail.imageUrl ? "thumbnail" : "cover";
const selectedImage = thumbnail.imageUrl ? thumbnail : cover;
const srcSet = getImageSrcSet(recipe.imagesJson, slotName);
const sizes = "(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 360px";
---

<article
  class="group bg-white dark:bg-gray-800 rounded-xl overflow-hidden
shadow-md hover:shadow-xl transition-all duration-300 transform
hover:-translate-y-1"
>
  <a href={recipe.route} class="block">
    <!-- Recipe Image
-->
    <div class="relative h-48 overflow-hidden">
      <img
        src={selectedImage.imageUrl || recipe.imageUrl}
        alt={selectedImage.imageAlt || recipe.imageAlt || recipe.headline}
        width={selectedImage.imageWidth || recipe.imageWidth || 720}
        height={selectedImage.imageHeight || recipe.imageHeight || 480}
        srcset={srcSet || undefined}
        sizes={srcSet ? sizes : undefined}
        class="w-full h-full object-cover
group-hover:scale-110 transition-transform duration-300"
        loading="lazy"
      />
      <button
        type="button"
        class="recipe-bookmark"
        data-bookmark-button
        data-bookmark-slug={recipe.slug}
        aria-pressed="false"
        aria-label="Bookmark recipe"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 4a2 2 0 012-2h8a2 2 0 012 2v18l-6-4-6 4V4z" />
        </svg>
      </button>
      <!--
Favorite Badge -->
      {
        recipe.isFavorite && (
          <div
            class="absolute top-3 left-3
bg-red-600 text-white px-3 py-1 rounded-full text-xs font-semibold flex
items-center gap-1"
          >
            {" "}
            <svg
              class="w-4 h-4"
              fill="currentColor"
              viewBox="0 0 20
20"
            >
              {" "}
              <path
                d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656
5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
              />{" "}
            </svg>{" "}
            <span>Featured</span>
          </div>
        )
      }
    </div>
    <!-- Recipe Info -->
    <div class="p-5">
      <!-- Category & Tags
-->
      <div class="flex items-center gap-2 mb-3">
        <span
          class="text-xs
font-semibold text-blue-600 dark:text-blue-400 uppercase tracking-wide"
        >
          {recipe.categorySlug.replace(/-/g, " ")}
        </span>
      </div>
      <!-- Title -->
      <h3
        class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2
group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
      >
        {recipe.headline}
      </h3>
      <!-- Description -->
      <p class="text-gray-600
dark:text-gray-300 text-sm mb-4 line-clamp-2">
        {recipe.shortDescription}
      </p>
      <!-- Meta Info -->
      <div
        class="flex items-center justify-between text-sm
text-gray-500 dark:text-gray-400 border-t border-gray-200 dark:border-gray-700
pt-4"
      >
        {
          recipeDetails?.prepTime && (
            <div class="flex items-center gap-1">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12
8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                />{" "}
              </svg>
              <span>{recipeDetails.prepTime}</span>{" "}
            </div>
          )
        }
        {
          recipeDetails?.servings && (
            <div class="flex items-center gap-1">
              {" "}
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                {" "}
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4.354a4 4 0 110 5.292M15
21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018
0z"
                />{" "}
              </svg>{" "}
              <span>{recipeDetails.servings} servings</span>{" "}
            </div>
          )
        }
      </div>
    </div>
  </a>
</article>

<style>
  .recipe-bookmark {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 36px;
    height: 36px;
    border-radius: 9999px;
    border: none;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
    z-index: 2;
  }

  .recipe-bookmark[data-bookmarked="true"] {
    background: rgba(255, 255, 255, 0.9);
    color: #111;
  }
</style>
