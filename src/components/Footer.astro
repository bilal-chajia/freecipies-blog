<style>
  .site-footer {
    background: #1a1a1a;
    color: #e0e0e0;
    padding: 3rem 0 1.5rem;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 1.5rem);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2.5rem;
    margin-bottom: 2.5rem;
  }

  .footer-column h3 {
    color: #fff;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.75rem;
  }

  .footer-column a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.95rem;
  }

  .footer-column a:hover {
    color: #ff6b35;
  }

  .footer-social {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    padding: 2rem 0;
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
  }

  .footer-social a {
    color: #b0b0b0;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #2a2a2a;
  }

  .footer-social a:hover {
    color: #ff6b35;
    background: #333;
    transform: translateY(-2px);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
  }

  .footer-bottom p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  .version {
    color: #555;
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 2rem;
    }
  }
</style>
